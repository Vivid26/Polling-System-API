            "delete": {
                "tags": [
                    "Question"
                ],
                "summary": "Delete a question.",
                "description": "Deletes a mentioned id question.",
                "operationId": "deleteQuestion",
                "parameters": [
                    {
                        "name": "questionId",
                        "in": "path",
                        "description": "The id of the question to delete.",
                        "required": true,
